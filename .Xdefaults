URxvt*scrollBar: false
URxvt*depth: 32
URxvt*font:           xft:DejaVu Sans Mono for Powerline:regular:size=10
URxvt*imFont:         xft:DejaVu Sans Mono for Powerline:regular:size=10
URxvt*boldFont:       xft:DejaVu Sans Mono for Powerline:bold:size=10
URxvt*italicFont:     xft:DejaVu Sans Mono for Powerline:italic:size=10
URxvt*boldItalicFont: xft:DejaVu Sans Mono for Powerline:bold:italic:size=10

xterm*metaSendsEscape: true
xterm*eightBitInput: false
xterm*faceName:DejaVu\ Sans\ Mono\ for\ Powerline
xterm*faceSize:10

! scrollback buffer lines - 65535 is max on most machines (64 is default)
URxvt*saveLines: 12000

! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #000000
URxvt*foreground: #ffffff
! black
URxvt.color0  : #000000
URxvt.color8  : #555555
! red
URxvt.color1  : #AA0000
URxvt.color9  : #FF5555
! green
URxvt.color2  : #00AA00
URxvt.color10 : #55FF55
! yellow
URxvt.color3  : #AA5500
URxvt.color11 : #FFFF55
! blue
URxvt.color4  : #0000AA
URxvt.color12 : #5555FF
! magenta
URxvt.color5  : #AA00AA
URxvt.color13 : #FF55FF
! cyan
URxvt.color6  : #00AAAA
URxvt.color14 : #55FFFF
! white
URxvt.color7  : #AAAAAA
URxvt.color15 : #FFFFFF

URxvt*letterSpace: -1


! fix modifier keys
URxvt.keysym.M-Up      : \033[1;3A
URxvt.keysym.M-Down    : \033[1;3B
URxvt.keysym.C-Up      : \033[1;5A
URxvt.keysym.C-Down    : \033[1;5B
URxvt.keysym.C-Right   : \033[1;5C
URxvt.keysym.C-Left    : \033[1;5D
URxvt.keysym.Home      : \033OH
URxvt.keysym.End       : \033OF
URxvt.keysym.M-C-Up    : \033[1;7A
URxvt.keysym.M-C-Down  : \033[1;7B
